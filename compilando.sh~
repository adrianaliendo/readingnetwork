#!/bin/bash
export PROGS=main
export CC=mpic++ 
export NVCC=nvcc 
export OMPFLAG=-fopenmp
export CUDAFLAG="-Xcompiler -lcuda -lcudart -lgomp -lmpi"

$NVCC -c gpu.cu -o gpu.o
$CC -c $OMPFLAGS node.cpp -o node.o
#$CC $OMPFLAG main.o node.o gpu.o -o fwcapa0
$CC -c $OMPFLAGS main.cpp -o main.o
$NVCC $CUDAFLAG  node.o gpu.o main.o -o fwcapa0
	
